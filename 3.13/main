package pcsetting.example;
import java.util.Scanner;

public class CH3313 {
	
	public static class Car
	{
		
		
		public Car(){}
		
		public Car(String model,String year,double price)
		{
			this.model=model;
			this.year=year;
			this.price=price;
		}
		
		public void setmodel(String themodel)
		{
			this.model=themodel;
		}
		
		public void setyear(String theyear)
		{
			this.year=theyear;
		}
		public void setprice(double theprice)
		{
			if(theprice<0)
			{
				System.out.println("price need to above 0");
				return;
			}
			this.price=theprice;
		}
		
		public String getmodel()
		{
			return model;
		}
		
		public String getyear()
		{
			return year;
		}
		
		public double getprice()
		{
			return price;
		}
		
		public void CarApplication()
		{
			System.out.println("the model: " + model);
			System.out.println("the year: " + year);
			System.out.println("the price: " + price);
		}
		
		private String model;
		private String year;
		private double price;
	}
	
	
	
	public static void main(String[] args)
	{
		Car Car1=new Car("BMW","Eightynine",3000);
		Car Car2=new Car("POSH","Seventytwo",5000);
		Car1.CarApplication();
		Car2.CarApplication();
		
		Car1.setprice(Car1.getprice()*0.95);
		Car2.setprice(Car2.getprice()*0.93);
		
		Car1.CarApplication();
		Car2.CarApplication();
	}
	
}
